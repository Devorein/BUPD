{
  "name": "@bupd/server",
  "version": "1.0.0",
  "description": "Node.js Express server package for BUPD",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "del-cli ./dist",
    "build": "tsc --sourceMap false",
    "build:watch": "tsc -w",
    "start": "node dist/index.js",
    "start:watch": "nodemon dist/index.js",
    "lint": "npx eslint \"./src\" --ext tsx,ts",
    "lint:fix": "npx eslint \"./src\" --ext tsx,ts --fix",
    "test": "npx jest --runInBand --config ./jest.config.js",
    "format": "npx prettier ./src/**/*.{ts,js} --write",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:watch\" -n tsc,node -c blue,green"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/morgan": "^1.9.3",
    "@bupd/types": "1.0.0"
  },
  "dependencies": {
    "argon2": "^0.28.3",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3",
    "winston": "^3.3.3",
    "yup": "^0.32.11",
    "@bupd/validation": "1.0.0"
  }
}